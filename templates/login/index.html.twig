{% extends 'layouts/base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <h1>Log in </h1>

    <form action="{{ path("app_login") }}" novalidate method="POST">
        <div>
            <label for="email">Email</label><br/>
            <input type="email" name="email" id="email" required autodfocus>
        </div>
        <div>
            <label for="password">Password</label><br/>
            <input type="password" name="password" id="password" required autodfocus>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token('login_form') }}">
        <input type="submit" value="Sign In">

    </form>
    <form  action="{{ path("app_login_register") }}">
        <input value="Register" type="submit">
    </form>
{% endblock %}
