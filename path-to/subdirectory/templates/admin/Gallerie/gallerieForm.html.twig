{% block title %}Ajouter une gallerie dans {{ project.name }} {% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div>
        <label for="titre">titre</label><br/>
        <input type="text" name="titre" id="titre" value="{{ gallerie.titre }}" required autodfocus>
    </div>
    <div>
        <label for="description">description</label><br/>
        <input type="text" name="description" id="description" value="{{ gallerie.description }}" required
               autodfocus>
    </div>
    <div>
        <label for="prix">prix</label><br/>
        <input type="number" step="any" name="prix" id="prix" value="{{ gallerie.prix }}" required autodfocus>
    </div>
    <div>
        <label for="image">image</label><br/>
        {{ form_row(form.imageFile) }}
    </div>
    <button type="submit">Enregistrer</button>
    {{ form_end(form) }}

{% endblock %}
